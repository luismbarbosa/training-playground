pipeline {
    agent none
    stages {
        stage('Maven') {
            agent {
                docker {
                    image 'maven:3.3.3'
                }
            }
            steps {
                sh 'mvn --version'
                sh 'npm --version'
            }
        }
        stage('Node') {
            agent { 
                docker { 
                    image 'node:6.3'
                }
            }
            steps {
                sh 'mvn --version'
                sh 'npm --version'
            }
        }
    }
}